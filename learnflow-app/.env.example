# LearnFlow Application Environment Configuration
# Copy this file to .env and fill in your values

# OpenRouter API Configuration (Get key from https://openrouter.ai)
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
LLM_MODEL="openai/gpt-3.5-turbo"

# PostgreSQL Database Configuration
POSTGRES_HOST="postgres.postgres.svc.cluster.local"
POSTGRES_DB="learnflow"
POSTGRES_USER="learnflow"
POSTGRES_PASSWORD="your-secure-password"
DATABASE_URL="postgresql://learnflow:your-password@localhost:5432/learnflow"

# Kafka Configuration
KAFKA_BROKERS="kafka.kafka.svc.cluster.local:9092"

# Service Ports
TRIAGE_AGENT_PORT=8001
CONCEPTS_AGENT_PORT=8002
CODE_REVIEW_AGENT_PORT=8003
DEBUG_AGENT_PORT=8004
EXERCISE_AGENT_PORT=8005
PROGRESS_AGENT_PORT=8006

# Dapr Configuration
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# Code Execution Limits
CODE_EXECUTION_TIMEOUT=5
CODE_EXECUTION_MEMORY_LIMIT=52428800

# Application Settings
DEBUG=false
LOG_LEVEL=info
